<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <!-- Display (EditText) -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:inputType="none"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <!-- Row 1: 1, 2, 3, + -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@id/editTextText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_toEndOf="@id/btn1"
        android:layout_alignTop="@id/btn1"
        android:layout_marginEnd="8dp" />

    <!-- Row 2: 4, 5, 6, - -->

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn2"
        android:layout_marginStart="21dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/btn2"
        android:text="3" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@id/btn3"
        android:text="+" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@id/btn1"
        android:layout_alignStart="@id/btn1"
        android:layout_marginTop="16dp" />

    <!-- Row 3: 7, 8, 9, / -->
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn5"
        android:layout_marginStart="13dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/btn5"
        android:text="5" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn6"
        android:layout_marginStart="21dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/btn6"
        android:text="6" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn7"
        android:layout_marginStart="19dp"
        android:layout_marginTop="-6dp"
        android:layout_toEndOf="@id/btn7"
        android:text="-" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_below="@id/btn5"
        android:layout_alignStart="@id/btn5"
        android:layout_marginTop="16dp" />

    <!-- Row 4: ., 0, C, X -->

    <Button
        android:id="@+id/btn10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn9"
        android:layout_marginStart="11dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/btn9"
        android:text="8" />

    <Button
        android:id="@+id/btn11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn10"
        android:layout_marginStart="21dp"
        android:layout_marginTop="-3dp"
        android:layout_toEndOf="@id/btn10"
        android:text="9" />

    <Button
        android:id="@+id/btn12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn11"
        android:layout_marginStart="19dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@id/btn11"
        android:text="/" />

    <Button
        android:id="@+id/btn14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:layout_below="@id/btn9"
        android:layout_alignStart="@id/btn9"
        android:layout_marginTop="16dp" />

    <!-- Equal button -->

    <Button
        android:id="@+id/btn15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn14"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/btn14"
        android:text="0" />

    <Button
        android:id="@+id/btn16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn15"
        android:layout_marginStart="21dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@id/btn15"
        android:text="C" />

    <Button
        android:id="@+id/btn13"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn16"
        android:layout_marginStart="19dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@id/btn16"
        android:text="X" />

    <Button
        android:id="@+id/buttoneql"
        android:layout_width="395dp"
        android:layout_height="36dp"
        android:layout_below="@id/btn14"
        android:layout_marginTop="17dp"
        android:text="=" />
</RelativeLayout>
